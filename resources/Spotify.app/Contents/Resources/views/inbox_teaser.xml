<%

if next(data) == nil then
    data = {
        social_enabled = false
    }
end

%>

<document>
  <style>
    text { size: 18; face: arial; }
    spacer { flex: 1; max-height: inf; }

    empty-text { text; align:center; text-align:center; color:#111; text-shadow:#494949 0 1; }
    empty-title { empty-text; bold:1; size:24; }
    empty-description { 
      empty-text; 
      margin:0,15,0,0; 
      maxwidth:500;
      size: 18;
      color: #808080;
      face: arial;
      text-shadow: #222 0 1;
}

    nosoc-icon { width:28; height:28; align:bottom; margin:0,0,9,3; }
    nosoc-text { text; }
    nosoc-title { nosoc-text; color:#fff; bold:1; size:30; text-shadow:#222 0 1; }
    nosoc-description { nosoc-text; color:#aaa; text-shadow:#222 0 -1; margin:0,15,0,0; flex:1; maxwidth:500; }

    startUsingButton {
      size: 24;
      height:66;
      bold: true;
      margin: 0,35,0,0;
      face:arial;
      text-shadow: #fff 0 1;
      color:#1f1f1f;
    }
  </style>

  %-- <debug color="kaka"/>

  <vbox background="bg_plaid.png" backgroundRepeat="xy">
    <vbox>
      % if data.social_enabled == true then
        <box style="spacer"/>
        <text style="empty-description">@{Inbox description empty}</text>
      % else
        <vbox margin="45,35,45,45">
          <hbox>
            <img src="inbox-title_icon.png" style="nosoc-icon" />
            <text style="nosoc-title">@{Inbox title}</text>
          </hbox>
          <text style="nosoc-description">@{Inbox description offline}</text>
          <button style="startUsingButton"
                  padding="32,0,62,2"
                  image="LibraryIntroStartButton"
                  label="@{Find people and view my profile}"
                  onClick="enableSocial" />
        </vbox>
      % end
    </vbox>
    <box style="spacer; flex: 2"/>
  </vbox>
</document>
