<?
if not data.name then
  data = {
  	name = "Andrea Bocelli",
  	body = "Lorem Ipsum",
  	images = {
  	}
  }
end
?>

<document>
<style>
	headerText { size:16; color:#222222; face:arial; bold:1 }
	bodyText { size:13; color:#33322a; link-color:#00689e; face:georgia }
	artistImage { width: 200; height: fit-content; imagemode: aspect; }
</style>

<scrollview bgcolor="#373737">
<box margin="30,20,30,20" minWidth="400" maxWidth="660" align="center,top">
	<img alt="InfoviewBiographyBg"/>
	<hbox margin="35,40,30,30">
		<!-- Hbox contains text to the left and images to the right -->
		<text id="textPart" flex="1" linespacing="1.25"><font style="headerText">${data.name}</font>
		
		<font style="bodyText"><?print(data.body)?></font></text>
		<vbox id="imagesPart" margin="0,25,0,0" hideoverflow="true">
			% for i,image in ipairs(data.images) do
				<box margin="10,10,0,0">
					<img alt="InfoviewImageBorder" />
					<img src="${image}" style="artistImage" margin="6,5,6,7" />			
										
				</box>
			% end
		</vbox>
	</hbox>
</box></scrollview>

</document>
